<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="70dp"
    android:background="@color/colF4F4F4">

    <RelativeLayout
        android:id="@+id/topbar_lay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/select_brand_back_im"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/brand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="品牌"
            android:textColor="#4b4b4b"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/select_brand_ok_tv"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确定"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="#4b4b4b"
            android:textSize="16dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topbar_lay"
        android:background="#ffffff"
        android:orientation="vertical">

        <ListView
            android:id="@+id/select_brand_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null">

        </ListView>

    </LinearLayout>

</RelativeLayout>
