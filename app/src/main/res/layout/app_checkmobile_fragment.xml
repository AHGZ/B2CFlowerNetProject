<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/app_statusbar_bg">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:src="@mipmap/icon_back_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="验证手机号"
            android:textColor="@color/white"
            android:textSize="18sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="37dp"
        android:gravity="left"
        android:text="本次操作需要短信确认,验证码已发送至手机:155****5555，请按提示操作."
        android:textColor="#57616B"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shap2"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_smscode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:src="@drawable/icon_sms" />

        <com.android.p2pflowernet.project.view.customview.CustomEditText
            android:id="@+id/edittext_smscode"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="2.8"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColorHint="#8D8D8D"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Sendsmsicon_tv"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_weight="1.5"
            android:background="@drawable/regist_show"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#1da658"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:id="@+id/nextto_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_norml"
        android:text="下一步"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

</LinearLayout>