<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_dianpu"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/rightarrow_icon"
            android:text="花返自营"
            android:textColor="#4B4B4B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            tools:text="等待买家付款" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="#F2F2F2"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="93dp"
                android:layout_weight="0.8"
                android:descendantFocusability="blocksDescendants"
                android:gravity="left|center_vertical">

                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_merchandise_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="#4B4B4B"
                    android:textSize="14sp"
                    tools:text="经典女戒钻石白金莫桑圣诞节可能石戒指东." />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#444444"
                        android:textSize="13sp"
                        tools:text="¥25" />

                    <TextView
                        android:id="@+id/tv_huafan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#444444"
                        android:textSize="13sp"
                        tools:text="花返：¥5" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:textColor="#444444"
                        android:textSize="13sp"
                        tools:text="x3" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <TextView
                android:id="@+id/tv_ordernum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="0.9"
                android:gravity="center_vertical|left"
                android:text="订单号："
                android:textColor="#444444"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1.1"
                android:gravity="center_vertical|right"
                android:text="有效期："
                android:textColor="#444444"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="right|center_vertical">


        <TextView
            android:id="@+id/tv_left_button"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@drawable/take_out_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/take_out_color_selector"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="申请退款" />

        <TextView
            android:id="@+id/tv_right_button"
            android:layout_width="83dp"
            android:layout_height="28dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/take_out_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/take_out_color_selector"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="查看劵码" />

    </LinearLayout>

</LinearLayout>