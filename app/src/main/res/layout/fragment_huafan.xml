<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="花返总利润"
                android:textColor="#929191"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="￥"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/hf_allamount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="168.00"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:text="普通会员满8000返"
                android:textColor="#929191"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="￥"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ordinarymember_manfanamount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="168.00"
                android:textColor="#FF2E00"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/applypartner_tv"
                android:layout_width="43dp"
                android:layout_height="18dp"
                android:background="@drawable/apply_selector"
                android:gravity="center"
                android:text="申请"
                android:textColor="#FF2E00"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="合伙人返"
                android:textColor="#4B4B4B"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="￥"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/partner_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="800.00"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:text="普通会员返"
                android:textColor="#4B4B4B"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="￥"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ordinarymember_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100.00"
                android:textColor="#FF2E00"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/applyagency_tv"
                android:layout_width="43dp"
                android:layout_height="18dp"
                android:background="@drawable/apply_selector"
                android:gravity="center"
                android:text="申请"
                android:textColor="#FF2E00"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="代理人返"
                android:textColor="#4B4B4B"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="￥"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/agency_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="800.00"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13dp"
                android:text="推荐人返"
                android:textColor="#4B4B4B"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:text="￥"
                android:textColor="#FF2E00"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/referee_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100.00"
                android:textColor="#FF2E00"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:alpha="0.4"
        android:background="#dddddd" />

</LinearLayout>