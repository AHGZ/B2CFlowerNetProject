<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:divider="@drawable/ll_divider_height_one_px"
    android:orientation="vertical"
    android:showDividers="middle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/icon_dianpu"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/rightarrow_icon"
            android:text="花返自营"
            android:textColor="#4B4B4B"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            tools:text="等待买家付款" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="93dp"
                android:layout_weight="0.8"
                android:descendantFocusability="blocksDescendants"
                android:gravity="left|center_vertical">

                <HorizontalScrollView
                    android:id="@+id/hs_photos"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:focusable="false"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_photos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_merchandise_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.43"
                    android:gravity="center_vertical"
                    android:textColor="#4B4B4B"
                    android:textSize="14sp"
                    tools:text="经典女戒钻石白金莫桑圣诞节可能石戒指东." />

                <TextView
                    android:id="@+id/tv_colorattr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:layout_weight="0.43"
                    android:gravity="left"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"
                    tools:text="颜色:839932粉红" />

                <TextView
                    android:id="@+id/hebdomad_tv"
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.43"
                    android:background="@drawable/drawer_sales_return"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="七天退货" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/goodsattr_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="￥160.00"
                    android:textColor="#FF2E00"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/backmoney_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="花返:￥10.00"
                    android:textColor="#FF2E00"
                    android:textSize="8sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_merchandise_price"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="15dp"
            android:gravity="right|center_vertical"
            android:text="@string/str_merchandise_price"
            android:textColor="#4B4B4B" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:gravity="right|center_vertical">


        <TextView
            android:id="@+id/tv_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_merchandise_orange"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="付款" />

        <TextView
            android:id="@+id/tv_center_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_merchandise_orange"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="取消订单" />


        <TextView
            android:id="@+id/tv_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/btn_merchandise_orange"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="确认收货" />
    </LinearLayout>

</LinearLayout>