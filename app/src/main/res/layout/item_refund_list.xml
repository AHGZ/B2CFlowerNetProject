<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_refund_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@mipmap/default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_refund_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="麻婆豆腐"
                android:textColor="@color/forum_font_def_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_refund_tv_pPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="¥ 38"
                android:textColor="@color/forum_font_def_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_refund_tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="份"
                android:textColor="#7A7A7A"
                android:textSize="10sp" />

            <TextView
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:id="@+id/item_refund_tv_oPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="#CCCCCC"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_refund_tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="@color/forum_font_def_color"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_refund_tv_takeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="花返：4"
                android:textColor="@color/forum_font_def_color"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>