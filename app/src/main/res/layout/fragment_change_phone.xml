<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#e8e8e8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:gravity="center_vertical"
            android:text="原手机号"
            android:textColor="#4b4b4b"
            android:textSize="17sp" />

        <com.android.p2pflowernet.project.view.customview.CustomEditText
            android:id="@+id/ed_a_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.4"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColor="#4B4B4B"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="#4b4b4b"
            android:textSize="17sp" />

        <com.android.p2pflowernet.project.view.customview.CustomEditText
            android:id="@+id/ed_smscode"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_sendcode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="1.3"
            android:background="@drawable/change_phone"
            android:gravity="center"
            android:padding="8dp"
            android:text="获取验证码"
            android:textColor="#FF2E00"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e8e8e8" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="35dp"
        android:text="下一步"
        android:background="@drawable/btn_norml"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>