<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/white"
    android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/group_buying_item__goods_list_sort_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.4"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_buying_item_tv_goods_list_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="综合排序"
                android:textColor="#333538"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/group_buying_item_sort1"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_xia" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/group_buying_item_goods_list_sales_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_buying_item_tv_goods_list_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量最高"
                android:textColor="#333538" />

            <ImageView
                android:id="@+id/group_buying_item_sort2"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_xia" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_buying_item_goods_list_nearby_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_buying_item_tv_goods_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离最近"
                android:textColor="#333538" />

            <ImageView
                android:id="@+id/group_buying_item_sort3"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_xia" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/group_buying_item_goods_list_sel_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/group_buying_item_tv_goods_list_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="筛选"
                android:textColor="#333538" />

            <ImageView
                android:id="@+id/group_buying_item_sort4"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_xia" />

        </LinearLayout>

</LinearLayout>