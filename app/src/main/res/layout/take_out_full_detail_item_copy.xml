<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="期望时间:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_qwsj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="立即配送"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:text="配送地址:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/take_full_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常营星座5栋9层902室"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/take_full_detail_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/take_full_detail_address"
                android:text="张三"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/take_full_detail_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/take_full_detail_customer_name"
                android:layout_alignRight="@+id/take_full_detail_address"
                android:layout_toRightOf="@+id/take_full_detail_customer_name"
                android:gravity="right"
                android:text="18511273854"
                android:textColor="#444444"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.5"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="配送服务:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_psfw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="达达配送"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#EEEEEE" />

    <RelativeLayout
        android:id="@+id/take_full_detail_ddh_relat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="订单号:"
                android:textColor="#777777"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/take_full_detail_ordernumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="201711091234561"
                android:textColor="#444444"
                android:textSize="14sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/take_full_detail_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shap33"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="1dp"
            android:text="复制"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/take_full_detail_ddsj_lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="订单时间:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_ddsj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2017-11-09 12：30：54"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/take_full_detail_zfsj_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="支付时间:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_zfsj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2017-11-09 12：30：54"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/take_full_detail_zffs_lin3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="支付方式:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_zffs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="微信支付"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/take_full_detail_ddbz_lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="订单备注:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_ddbz"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2017-11-09 14：30：54"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/take_full_detail_shsj_lin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="收货时间:"
            android:textColor="#777777"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/take_full_detail_shsj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2017-11-09 14：30：54"
            android:textColor="#444444"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>