<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/group_full_detail_img"
        android:layout_width="91dp"
        android:layout_height="81dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/sptp1" />

    <LinearLayout
        android:id="@+id/group_full_detail_lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/group_full_detail_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_full_detail_food_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新品双人套餐"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/group_full_detail_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="¥99"
            android:textColor="#444444"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_full_detail_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_full_detail_lin1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/group_full_detail_img"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_full_detail_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="一家串店"
            android:textColor="#444444"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/group_full_detail_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="花返：¥12"
            android:textColor="#777777"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>