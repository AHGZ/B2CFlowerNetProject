<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">
    <include layout="@layout/cate_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/group_buying_submitorder_shop_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/group_buying_submitorder_shop_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/group_buying_submitorder_shop_iv"
            android:layout_toRightOf="@+id/group_buying_submitorder_shop_iv"
            android:text="新品双人套餐"
            android:textColor="#444444"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/group_buying_submitorder_shop_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_buying_submitorder_shop_tv1"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/group_buying_submitorder_shop_iv"
            android:text="一家串店"
            android:textColor="#444444"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/group_buying_submitorder_shop_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="21dp"
            android:text="¥99"
            android:textColor="#FF1E00"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_buying_submitorder_num_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="购买数量"
            android:textColor="#777777"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/group_buying_submitorder_num_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/jian" />

        <TextView
            android:id="@+id/group_buying_submitorder_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="1"
            android:textColor="#323233" />

        <ImageView
            android:id="@+id/group_buying_submitorder_num_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:src="@drawable/jia" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_buying_submitorder_huafan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="花返"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_buying_submitorder_huafan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="¥9"
            android:textColor="#444444"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_buying_submitorder_xiaoji_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="小计"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_buying_submitorder_xiaoji_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="¥99"
            android:textColor="#444444"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_buying_submitorder_sfje_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="实付金额"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_buying_submitorder_sfje_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="¥99"
            android:textColor="#FF1E00"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group_buying_submitorder_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="手机号"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group_buying_submitorder_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="18637245663"
            android:textColor="#444444"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/group_buying_submitorder_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="#FF1E00"
        android:text="提交订单"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</LinearLayout>