<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <com.android.p2pflowernet.project.view.customview.ElastticityScrollView
        android:id="@+id/srcollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/logolayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/logo" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/loginin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/logolayout"
                android:layout_marginTop="45dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/loginin_realname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/layout_border_editextlayout"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_phonetitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:src="@drawable/icon_phone2" />

                    <com.android.p2pflowernet.project.view.customview.CustomEditText
                        android:id="@+id/edittext_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:inputType="phone"
                        android:gravity="left|center_vertical"
                        android:hint="请输入手机号"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textSize="12dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/loginin_password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/layout_border_editextlayout"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:src="@drawable/icon_pwd" />

                    <com.android.p2pflowernet.project.view.customview.CustomEditText
                        android:id="@+id/edittext_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawablePadding="10dp"
                        android:gravity="left|center_vertical"
                        android:hint="请输入密码"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:singleLine="true"
                        android:textSize="12dp" />

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/loginin_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/loginin_layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_norml"
                android:text="立即登录"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/moblie_fastregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/loginin_btn"
                android:layout_below="@id/loginin_btn"
                android:layout_marginTop="15dp"
                android:text="快速注册"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/loginin_btn"
                android:layout_below="@id/loginin_btn"
                android:layout_marginTop="15dp"
                android:text="忘记密码?"
                android:textColor="@android:color/black" />
        </RelativeLayout>


    </com.android.p2pflowernet.project.view.customview.ElastticityScrollView>


</LinearLayout>